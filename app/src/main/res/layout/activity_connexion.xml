<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:background="#fffeee"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:textAlignment="center">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:contentDescription="logo_prox_market"
        android:src="@drawable/proxy_local_2"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/fredoka_one"
        android:text="Votre compte"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/identifiants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:autofillHints=""
        android:fontFamily="@font/fredoka_one"
        android:hint="Identifiants"
        android:inputType="text"
        android:padding="25dp"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/fredoka_one"
        android:hint="Mot de passe"
        android:inputType="text"
        android:padding="25dp"
        android:textAlignment="center"
        tools:ignore="TextFields" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:layout_weight="0"
        android:background="@drawable/activity_connexion_border"
        android:fontFamily="@font/fredoka_one"
        android:text="Connexion"
        android:textColor="#FFFCFC"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:fontFamily="@font/fredoka_one"
        android:text="Vous n'avez pas encore de compte ?"
        android:textAlignment="center"
        android:textColor="#444444"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:layout_weight="0"
        android:background="@drawable/activity_connexion_border"
        android:fontFamily="@font/fredoka_one"
        android:text="Inscription"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</LinearLayout>