<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFEEE"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:contentDescription="logo_prox_market"
        android:src="@drawable/proxy_local_2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="210dp"
        android:layout_height="97dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@+id/imageView2"
        android:fontFamily="@font/fredoka_one"
        android:text="Proxy Market"
        android:textColor="#282828"
        android:textSize="28sp" />

    <Button
        android:id="@+id/button_myproduct"
        android:layout_below="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="230dp"
        android:background="@drawable/activity_connexion_border"
        android:fontFamily="@font/fredoka_one"
        android:text="Mes produits"
        android:textColor="#FFFCFC"
        android:textSize="15sp" />

    <Button
        android:id="@+id/button_myprofil"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/imageView2"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/activity_input_description"
        android:fontFamily="@font/fredoka_one"
        android:text="Mon profil"
        android:textColor="#FFFCFC"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/products"
        android:layout_below="@+id/button_myprofil"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:contentDescription="products"
        android:src="@drawable/mesproduits" />

</RelativeLayout>