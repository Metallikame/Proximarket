<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFEEE"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:contentDescription="logo_prox_market"
        android:src="@drawable/proxy_local_2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="210dp"
        android:layout_height="97dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@+id/imageView2"
        android:fontFamily="@font/fredoka_one"
        android:text="Proxy Market"
        android:textColor="#282828"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredoka_one"
        android:text="Lait local"
        android:textAlignment="center"
        android:textColor="#282828"
        android:textSize="28sp" />

    <ImageView
        android:id="@+id/milk"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_marginTop="20dp"
        android:contentDescription="logo_prox_market"
        android:src="@drawable/milk" />

    <Button
        android:id="@+id/button3"
        android:layout_below="@+id/milk"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="130dp"
        android:background="@drawable/activity_connexion_border"
        android:fontFamily="@font/fredoka_one"
        android:text="Score"
        android:textColor="#FFFCFC"
        android:textSize="15sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/button3"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/activity_input_description"
        android:fontFamily="@font/fredoka_one"
        android:text="Infos"
        android:textColor="#FFFCFC"
        android:textSize="15sp" />

    <Button
        android:id="@+id/buttonAchat"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_below="@+id/button3"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/activity_input_description"
        android:fontFamily="@font/fredoka_one"
        android:text="Achat"
        android:textColor="#FFFCFC"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonAchat"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/fredoka_one"
        android:text="1.50€"
        android:textColor="#000000"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonAchat"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:fontFamily="@font/fredoka_one"
        android:text="1L"
        android:textColor="#000000"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView14"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:text="1€50/L"
        android:textColor="#1C1C1C"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView15"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:text="Récupération sur place ou lors d'un évènement de vente (marché, foire...)"
        android:textColor="#1C1C1C"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView21"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:text="Pour les dates et horaires des marchés, se rendre sur la page du producteur"
        android:textColor="#1C1C1C"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonCommander"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView22"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/activity_connexion_border"
        android:fontFamily="@font/fredoka_one"
        android:text="Commander"
        android:textColor="#FFFCFC"
        android:textSize="15sp" />

</RelativeLayout>