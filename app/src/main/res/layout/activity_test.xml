<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFEEE"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:contentDescription="logo_prox_market"
        android:src="@drawable/proxy_local_2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="210dp"
        android:layout_height="97dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@+id/imageView2"
        android:fontFamily="@font/fredoka_one"
        android:text="Proxy Market"
        android:textColor="#282828"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredoka_one"
        android:text="Fromage râpé"
        android:textAlignment="center"
        android:textColor="#282828"
        android:textSize="28sp" />

    <ImageView
        android:id="@+id/cheese"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_marginTop="20dp"
        android:contentDescription="logo_prox_market"
        android:src="@drawable/cheese" />

    <Button
        android:id="@+id/button3"
        android:layout_below="@+id/cheese"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="230dp"
        android:background="@drawable/activity_connexion_border"
        android:fontFamily="@font/fredoka_one"
        android:text="Score"
        android:textColor="#FFFCFC"
        android:textSize="15sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/cheese"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/activity_input_description"
        android:fontFamily="@font/fredoka_one"
        android:text="Description"
        android:textColor="#FFFCFC"
        android:textSize="15sp" />

    <ProgressBar
        android:id="@+id/progressBar5"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:max="100"
        android:progress="72" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:fontFamily="@font/fredoka_one"
        android:text="72"
        android:textColor="#000000"
        android:textSize="42sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredoka_one"
        android:text="Eco-score : Bon"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/fredoka_one"
        android:text="Qualité du produit"
        android:textColor="#282828"
        android:textSize="18sp" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="180dp"
        android:layout_height="10dp"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="28dp"
        android:layout_marginRight="80dp"
        android:layout_marginStart="200dp"
        android:max="100"
        android:progress="90" />

</RelativeLayout>